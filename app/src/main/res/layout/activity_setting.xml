<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".chat.SettingActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="40dp"
        android:background="@color/white"
        android:src="@drawable/edit"
        app:layout_constraintBottom_toTopOf="@+id/settingstatus"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@drawable/edit" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settingprofile"
        android:layout_width="176dp"
        android:layout_height="166dp"
        android:backgroundTintMode="@color/white"
       android:src="@drawable/photocamera"
        app:layout_constraintBottom_toTopOf="@+id/settingname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.596" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="40dp"
        android:background="@color/white"
        android:src="@drawable/edit"
        app:layout_constraintBottom_toTopOf="@+id/settingname"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@drawable/edit" />

    <EditText
        android:id="@+id/settingname"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="216dp"
        android:background="@color/white"
        android:backgroundTintMode="screen"
        android:ems="15"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:textColor="@color/black"

        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/settingstatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.729" />

    <EditText
        android:id="@+id/settingstatus"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@color/white"
        android:ems="15"
        android:hint="Estado"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.683" />

    <Button
        android:id="@+id/donebutt"
        android:backgroundTint="@color/white"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="@string/guardar"
        android:textStyle="bold"
        android:textSize="15sp"

        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.798" />


    <ImageView
        android:id="@+id/id_back_to_chatActivity"
        android:layout_width="61dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:background="@color/white"
        android:src="@drawable/back"
        app:layout_constraintBottom_toTopOf="@+id/settingprofile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.202"
        tools:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="19dp"
        android:layout_height="23dp"
        android:layout_marginEnd="32dp"
        android:background="@color/white"
        android:src="@drawable/edit"
        app:layout_constraintBottom_toTopOf="@+id/settingprofile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/settingprofile"
        tools:srcCompat="@drawable/edit" />


</androidx.constraintlayout.widget.ConstraintLayout>