<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".autentication.SplashScreen">


    <ImageView
        android:id="@+id/id_logo_splash"
        android:layout_width="239dp"
        android:layout_height="233dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo">

    </ImageView>


    <TextView
        android:id="@+id/id_tv1_splash"
        android:layout_width="34dp"
        android:layout_height="35dp"
        android:layout_above="@+id/id_maintext_splash"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="BY"
        android:textColor="@color/black"

        android:textStyle="bold">

    </TextView>


    <ImageView
        android:id="@+id/id_ig"
        android:layout_width="36dp"
        android:layout_height="31dp"
        android:layout_alignTop="@+id/id_tv1_splash"
        android:layout_alignEnd="@+id/id_maintext_splash"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="188dp"
        android:layout_weight="1"
        android:src="@drawable/ig" />

    <TextView
        android:id="@+id/id_maintext_splash"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="54dp"
        android:text="jihadhasan310"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold">

    </TextView>


</RelativeLayout>